# Production Environment Variables for VPS
# Copy this to .env on your VPS server and update values

# MongoDB Connection
MONGO_URL=mongodb+srv://your_user:your_password@your_cluster.mongodb.net/test?retryWrites=true&w=majority

# JWT Secret Key
SECRET_KEY=your_very_secure_secret_key_here

# Cloudinary Configuration
CLOUD_NAME=your_cloudinary_name
CLOUD_API=your_cloudinary_api_key
CLOUD_SECRET=your_cloudinary_api_secret

# YouTube API Configuration (Optional)
YOUTUBE_CLIENT_ID=your_youtube_client_id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=https://mysoov.tv/api/v1/youtube/oauth2callback
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token

# Frontend URL (for social sharing and redirects)
FRONTEND_URL=https://mysoov.tv

# Backend URL (for absolute URLs in social sharing and local file serving)
BACKEND_URL=https://api.mysoov.tv

# Node Environment
NODE_ENV=production

# Server Port
PORT=5100

# Stripe Configuration (if using payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret