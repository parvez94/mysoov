# MongoDB Connection
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority&appName=app_name

# JWT Secret Key
SECRET_KEY=your_secret_key_here

# Cloudinary Configuration
CLOUD_NAME=your_cloudinary_cloud_name
CLOUD_API=your_cloudinary_api_key
CLOUD_SECRET=your_cloudinary_api_secret

# YouTube API Configuration (Optional - for video storage)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=GOCSPX-your_youtube_client_secret_here
YOUTUBE_REDIRECT_URI=http://localhost:5100/api/v1/youtube/oauth2callback
YOUTUBE_REFRESH_TOKEN=your_youtube_refresh_token_here

# Frontend URL (for social media sharing redirects)
FRONTEND_URL=http://localhost:5173